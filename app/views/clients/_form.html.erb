<%= form_with model: @client do |f| %>
  <% if @client.errors.any? %>
    <div id='error_explanation'>
      <h2>
        <%= pluralize(@client.errors.count, 'error') %> 
        prohibited the client from saving: 
      </h2>
      <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>

  <div>
    <%= f.label :credit_score %>
    <%= f.number_field :credit_score %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>