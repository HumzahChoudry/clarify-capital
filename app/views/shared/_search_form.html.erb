<div class="search-container">
  <%= form_with url: search_path, method: :get, local: true, class: "search-form" do |form| %>
    <div class="search-input-group">
      <%= form.text_field :search, 
          placeholder: search_placeholder, 
          value: params[:search],
          class: "search-input" %>
      <%= form.submit "Search", class: "btn-secondary" %>
      <% if params[:search].present? %>
        <%= link_to "Clear", search_path, class: "btn-tertiary" %>
      <% end %>
    </div>
  <% end %>

  <% if params[:search].present? %>
    <div class="search-results-info">
      <p>Showing results for "<%= params[:search] %>" (<%= result_count %> found)</p>
    </div>
  <% end %>
</div>