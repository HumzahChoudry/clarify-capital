<%= form_with(model: lender, local: true) do |form| %>
  <% if lender.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(lender.errors.count, "error") %> 
        prohibited the lender from saving: 
      </h2>
      <ul>
        <% lender.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :minimum_loan_amount %><br>
    <%= form.number_field :minimum_loan_amount, step: 0.01, min: 0 %>
  </div>

  <div class="field">
    <%= form.label :maximum_loan_amount %><br>
    <%= form.number_field :maximum_loan_amount, step: 0.01, min: 0 %>
  </div>

  <div class="field">
    <%= form.label :interest_rate %><br>
    <%= form.number_field :interest_rate, step: 0.01, min: 0, max: 100 %>
  </div>

  <div class="field">
    <%= form.label :minimum_credit_score %><br>
    <%= form.number_field :minimum_credit_score, min: 0, max: 850 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
